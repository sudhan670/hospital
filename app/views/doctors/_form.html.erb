<%= form_with(model: doctor, local: true) do |form| %>
    <% if doctor.errors.any? %>
      <div class="alert alert-danger">
        <h4><%= pluralize(doctor.errors.count, "error") %> prohibited this doctor from being saved:</h4>
        <ul>
          <% doctor.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
  
    <div class="row">
      <div class="col-md-6 form-group">
        <%= form.label :first_name %>
        <%= form.text_field :first_name, class: "form-control" %>
      </div>
  
      <div class="col-md-6 form-group">
        <%= form.label :last_name %>
        <%= form.text_field :last_name, class: "form-control" %>
      </div>
    </div>
  
    <div class="row">
      <div class="col-md-6 form-group">
        <%= form.label :specialty_id %>
        <%= form.collection_select :specialty_id, Specialty.all, :id, :name, {prompt: "Select a specialty"}, class: "form-control" %>
      </div>
  
      <div class="col-md-6 form-group">
        <%= form.label :joining_date %>
        <%= form.date_field :joining_date, class: "form-control" %>
      </div>
    </div>
  
    <div class="form-group">
      <%= form.label :email %>
      <%= form.email_field :email, class: "form-control" %>
    </div>
  
    <div class="form-group">
      <%= form.label :phone %>
      <%= form.telephone_field :phone, class: "form-control" %>
    </div>
  
    <div class="form-group">
      <%= form.label :address %>
      <%= form.text_area :address, class: "form-control", rows: 3 %>
    </div>
  
    <div class="actions">
      <%= form.submit class: "btn btn-primary" %>
    </div>
  <% end %>