<%= form_with(model: appointment, local: true) do |form| %>
  <div class="form-group">
    <%= form.label :patient_id %>
    <%= form.collection_select :patient_id, Patient.all, :id, :full_name, { prompt: 'Select a Patient' }, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :doctor_id %>
    <%= form.collection_select :doctor_id, Doctor.all, :id, :full_name, { prompt: 'Select a Doctor' }, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :appointment_date, "Appointment Date & Time" %>
    <%= form.datetime_select :appointment_date, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :status %>
    <%= form.select :status, ['Scheduled', 'Completed', 'Canceled'], {}, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :notes %>
    <%= form.text_area :notes, class: "form-control" %>
  </div>

  <%= form.submit class: "btn btn-primary" %>
<% end %>
